<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="7dp"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="vertical">


<me.you.thinking_fast.custom.ticket_shap
    android:layout_width="match_parent"
    android:layout_height="130dp"

    android:id="@+id/bak_liner_level"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="rtl"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical" >

            <ImageView
                android:alpha="0.7"
                android:layout_centerInParent="true"
                android:id="@+id/lvl_img"
                android:layout_width="80dp"
                android:layout_height="80dp"
             />

        <TextView
            android:layout_centerInParent="true"
            android:id="@+id/lvl_num_numirc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="4"/>



        </RelativeLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                    android:gravity="center"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
>

                <me.you.thinking_fast.custom.circuler_rate_view
                    android:id="@+id/lvl_pers"

                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/currnt_title"
                    android:textSize="19sp"
                    android:text="@string/_1"/>

        </LinearLayout>

    </LinearLayout>


</me.you.thinking_fast.custom.ticket_shap>


    <LinearLayout
        android:id="@+id/lvl_action"
        android:visibility="gone"
        android:padding="4dp"
        android:elevation="-1dp"
        android:gravity="center"
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/lvl_replay_8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="اعادة اللعب"
            android:textSize="16sp"
            android:background="@drawable/btn_style1"
       android:elevation="0dp" />
    </LinearLayout>
</LinearLayout>