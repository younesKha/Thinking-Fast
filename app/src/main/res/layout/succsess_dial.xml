<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:gravity="center"
    android:padding="5dp">


    <RelativeLayout
    android:id="@+id/ccf"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:paddingTop="45dp">


        <ImageView
    android:layout_width="match_parent"
    android:layout_height="137dp"
    android:src="@drawable/good"
    android:shadowColor="@color/blow_2"
    android:shadowDx="5"
    android:shadowDy="10"
    android:shadowRadius="10"
    android:id="@+id/good_img"
    android:layout_alignParentTop="true"
    android:alpha="1" />


        <RelativeLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/frame_style13"
            android:padding="7dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="vertical"
                android:paddingTop="12dp"
                android:paddingBottom="12dp">

                <TextView
                    android:id="@+id/incorrect_answer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:shadowColor="@color/blow_2"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="20"
                    android:text="عدد الاجابات الخاطئة "
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/speed_pers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:padding="5dp"
                    android:shadowColor="@color/blow_2"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="20"
                    android:text="سرعــة الرد "
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />


                <TextView
                    android:id="@+id/complish_pers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:padding="5dp"
                    android:shadowColor="@color/blow_2"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="20"
                    android:text="  نسبة الانجاز "
                    android:textColor="@android:color/white"
                    android:textSize="20dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ccf2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="9dp">


                <LinearLayout
                    android:id="@+id/stop_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/empty"
                    android:layoutDirection="rtl"
                    android:orientation="horizontal"
                    android:padding="10dp">

                    <ImageView
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:src="@drawable/stoptime" />

                    <TextView
                        android:id="@+id/stopCo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:shadowColor="@color/blow_2"
                        android:shadowDx="5"
                        android:shadowDy="5"
                        android:shadowRadius="20"
                        android:text="5"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:translationX="20dp" />

                </LinearLayout>
            </LinearLayout>


        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="13dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/retry_btn"
                android:layout_width="80pt"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:alpha="1"
                android:background="@drawable/btn_style4"
                android:text=" مستوي جديد "
                android:textColor="@color/blow_dark"
                android:textSize="20dp" />

<Button
    android:text="الرئيسة"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:textSize="20dp"
    android:id="@+id/main_btn"
    android:background="@drawable/btn_style2"
    android:textColor="@color/blow_dark"
    android:layout_width="80pt" />
        </LinearLayout>
</RelativeLayout>
</LinearLayout>
